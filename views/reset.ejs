<%- include ('partials/header') %>

<div class="row custom-form">
    <div class="col-md-12">
        <h1 class="text-center">Reset Password</h1>
        <hr class="my-4">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="password">New Password</label>
                <input autofocus class="form-control" type="password" id="password" name="password" placeholder="New password">
            </div>
            <div class="form-group">
                <label for="confirm">Confirm Password</label>
                <input class="form-control" type="password" id="confirm" name="confirm" placeholder="Confirm password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update Password</button>
            </div>
        </form>
    </div>
</div>

<%- include ('partials/footer') %>