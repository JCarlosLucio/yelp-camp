<%- include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome to YelpCamp!</h1>
            <p>View the best campgrounds from all over the world!</p>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="Campground search...">
                        <input class="btn btn-default" type="submit" value="Search">
                    </div>
                </form>
            </p>
            <p>
                <a class="btn btn-success" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
        <div class="col-md-12 col-sm-12 text-left">
            <% if (searchResult !== undefined) { %>
                <h5><%= searchResult %> - <a href="/campgrounds"> All campgrounds</a></h5>
            <% } %>
        </div>
    </header>
    <div class="row text-center" id="index-campgrounds">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="campground_image">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') %>