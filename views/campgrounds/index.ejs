<%- include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4 pb-4"><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p class="lead">View the best campgrounds from all over the world!</p>
            <hr class="my-4">
            <p>
                <form action="/campgrounds" method="GET" class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Campground search..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </p>
            <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
            <% if (searchResult !== undefined) { %>
                <h6><%= searchResult %> - <a href="/campgrounds"> All campgrounds</a></h6>
            <% } %>
        </div>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                    <div class="card-body">
                        <a href="/campgrounds/<%= campground._id %>"><h5 class="card-title"><%= campground.name %></h5></a>
                        <p class="mb-1">                                
                        <% if (campground.rating === 0) { %>
                            <em>No reviews yet.</em>
                        <% } else { %>
                        <i class="fas fa-star yellow yellow-shadow"></i>
                        <i class="fas fa-star <% if (campground.rating > 1.5) { %> yellow yellow-shadow <% } %>"></i>
                        <i class="fas fa-star <% if (campground.rating > 2.5) { %> yellow yellow-shadow <% } %>"></i>
                        <i class="fas fa-star <% if (campground.rating > 3.5) { %> yellow yellow-shadow <% } %>"></i>
                        <i class="fas fa-star <% if (campground.rating > 4.5) { %> yellow yellow-shadow <% } %>"></i>
                        <% } %>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') %>