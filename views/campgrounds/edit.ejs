<%- include ('../partials/header') %>

<div class="row custom-signup">
    <div class="col-md-12"> 
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <hr class="my-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label for="name">Name</label>
                    <input required class="form-control" id="name" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="location">Location</label>
                    <input required class="form-control" id="location" type="text" name="campground[location]" value="<%= campground.location %>">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-9 mb-3">
                    <label for="image">Image</label>
                    <input required class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image %>"
                    pattern="^https:\/\/source\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions.">
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group col-md-3 mb-3">
                    <label for="price">Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>  
                        <input class="form-control input-group-append" id="price" type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea required class="form-control" id="description" name="campground[description]" cols="30" rows="2"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %>
