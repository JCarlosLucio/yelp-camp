<%- include ('../partials/header') %>

<div class="row custom-signup">
    <div class="col-md-12"> 
        <h1 class="text-center">Create a New Campground</h1>
        <hr class="my-4">
        <form action="/campgrounds" method="POST">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label for="name">Name</label>
                    <input required class="form-control" id="name" type="text" name="name" placeholder="Campground Name">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="location">Location</label>
                    <input required class="form-control" id="location" type="text" name="location" placeholder="Yosemite National Park, CA">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-9 mb-3">
                    <label for="image">Image</label>
                    <input required class="form-control" id="image" type="text" name="image" placeholder="https://source.unsplash.com/campground-image"
                    pattern="^https:\/\/source\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions.">
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group col-md-3 mb-3">
                    <label for="price">Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>  
                        <input class="form-control input-group-append" id="price" type="number" name="price" placeholder="0.00" min="0.00" step="0.01">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea required class="form-control" id="description" name="description" cols="30" rows="2"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %>