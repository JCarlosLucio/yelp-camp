<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= campground.name %></h1>
        <div class="custom-form">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label>Write your review</label>
                    <textarea required class="form-control" name="comment[text]" cols="30" rows="5"></textarea>
                    <!-- <input class="form-control" type="text" name="comment[text]" placeholder="text"> -->
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>/">Go Back</a>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>