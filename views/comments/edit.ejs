<%- include ('../partials/header') %>

<div class="row custom-form">
    <div class="col-md-12">
        <h1 class="text-center">Edit Comment</h1>
        <hr class="my-4">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment">Write your review</label>
                <textarea required class="form-control" id="comment" name="comment[text]" cols="30" rows="3"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>/">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %>